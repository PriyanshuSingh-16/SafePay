# safepay_qr/safepay_qr_backend/.env.example
# This file contains example environment variables for your backend.
# IMPORTANT: DO NOT commit your actual .env file to version control (Git).
# Create a new file named .env in the same directory and fill in your actual values.

# MongoDB Connection URI
# For local MongoDB: MONGO_URI=mongodb://localhost:27017/safepay_qr_db
# For MongoDB Atlas (cloud database), replace with your connection string:
MONGO_URI=mongodb://127.0.0.1:27017/safepay_qr

# Port for the Node.js backend server to listen on
PORT=3000

# Secret for mock authentication (used in authMiddleware.js for hackathon demo)
# In a real app, this would be a strong, unique secret.
MOCK_AUTH_SECRET=hackathon_super_secret_token_123